<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ppp_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2196F3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#2196F3">

        <com.wfzcx.ieos.ui.FontIcon
            android:id="@+id/fic_action_left"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/ion_back"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tb_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="#fff"
            android:textSize="20sp" />

        <com.wfzcx.ieos.ui.FontIcon
            android:id="@+id/fic_action_right2"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="42dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/ion_search"
            android:textColor="#fff"
            android:textSize="20sp"
            android:visibility="gone" />

        <com.wfzcx.ieos.ui.FontIcon
            android:id="@+id/fic_action_right"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/ion_search"
            android:textColor="#fff"
            android:textSize="20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/fic_action_text"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#878787"
        android:visibility="gone" />

</LinearLayout>